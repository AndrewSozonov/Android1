<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/myFirstApplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="@string/my_first_application"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.268" />

    <Button
        android:id="@+id/button"
        android:layout_width="167dp"
        android:layout_height="120dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="361dp"
        android:fontFamily="bold"
        android:onClick="buttonOnClick"
        android:text="@string/my"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@id/myFirstApplication"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.437" />

    <Switch
        android:id="@+id/myFirstSwitch"
        android:layout_width="135dp"
        android:layout_height="57dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="224dp"
        android:onClick="switchOnClick"
        android:text="@string/my_first_switch"
        android:switchPadding="3sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="73dp"
        android:layout_height="72dp"
        android:layout_marginStart="169dp"
        android:layout_marginTop="66dp"
        android:contentDescription="@string/android_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>